{% extends 'base.html.twig' %}

{% block title %}Snowtricks{% endblock %}

{% block body %}
    <div class="jumbotron">
        <div class="col-md-6 header-title">
            <h1>Snowtricks</h1>
        </div>
    </div>

    <div class="container-fluid" id="all-tricks">
        {% if app.user %}
            <a href="{{ path('trick_new') }}" class="btn btn-danger">Create new trick</a>

        {% endif %}
        <div class="row row-cols-5">
            {% for trick in tricks %}
                <div class="card border-primary">
                    <img src="https://picsum.photos/300/200" class="card-img-top" alt="...">
                    <div class="card-body row">
                        <div class="col-8">
                            <a href="trick/{{ trick.slug }}"><h5
                                        class="card-title">{{ trick.name }}</h5></a>
                        </div>
                        <div class="col">
                        {% if app.user %}

                            <div class="col-1">
                                <a href="{{ path('trick_edit', {'slug': trick.slug}) }}"><i
                                            class="fas fa-pencil-alt"></i></a>
                            </div>
                            <div class="col-1">
                                <a href="{{ path('trick_delete', {'slug': trick.slug}) }}">
                                    <i class="fas fa-trash-alt"></i></a>
                            </div>
                        {% endif %}
                        </div>
                    </div>

                </div>
            {% else %}
                    <p>Il n'a aucun trick</p>
            {% endfor %}
        </div>
        <ul class="pagination">
            {% for item in 1..((total / limit)|round(0, 'ceil')) %}
                <a href="?page={{ item }}">{{ item }}</a>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
