{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container reset-password">
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h2>Mot de passe oublié ?</h2>

    {{ form_start(requestForm) }}
        <div>
            <p>
                Entrez votre username et nous vous enverrons un lien pour réinitialiser votre mot de passe.
            </p>
        </div>

        {{ form_row(requestForm.username, {'label': false}) }}

        <button class="btn btn-primary btn-reset-password">Envoyer les instruction</button>
    {{ form_end(requestForm) }}
    </div>
{% endblock %}
