{% extends 'base.html.twig' %}

{% block title %}{{ trick.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="card mb-3">
            <img class="card-img-top" src="https://upload.wikimedia.org/wikipedia/commons/7/70/Picswiss_VD-44-23.jpg"
                 alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{ trick.name }}</h5>
                <p class="card-text">{{ trick.description|raw }}</p>
                <p class="card-text"><small class="text-muted"> Ajouté
                        le {{ trick.createdAt ? trick.createdAt|date('d/m/Y H:i') : '' }}</small></p>
                <p class="card-text"><small class="text-muted">Dernière mise à jour
                        le {{ trick.updatedAt ? trick.updatedAt|date('d/m/Y H:i') : '' }}</small></p>
                <p>Category: <a href="#" class="link-success">{{ trick.category.name }}</a></p>
            </div>

        </div>
        <div class="row justify-content-md-center">
            <div class="col-4">
                <button type="button" class="btn btn-dark btn-lg"><a href="{{ path('home') }}">back to list</a></button>
            </div>
            <div class="col-4">
                <button type="button" class="btn btn-dark btn-lg"><a
                            href="{{ path('trick_edit', {'id': trick.id}) }}">edit</a></button>
            </div>
            <div class="col"> {{ include('trick/_delete_form.html.twig') }}</div>
        </div>


    </div>

{% endblock %}
