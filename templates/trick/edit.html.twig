{% extends 'base.html.twig' %}

{% block title %}Edit Trick{% endblock %}

{% block body %}
    {% include('shared/_alert.html.twig') %}

<section class="info-trick">
    <div class="go-back">
    <a href="{{ path('trick_show', {'slug': trick.slug}) }}">
        <i class="fas fa-long-arrow-left"></i>
        Retour au trick <strong >{{ trick.name }}</strong>
    </a>
    </div>

        {{ include('trick/_form.html.twig', {'button_label': 'Modifier trick'}) }}
    <div class="btn-edit-page">
        {% embed "trick/_delete_form.html.twig" %}
                {% set btn = '<button class="btn btn-outline-danger btn-lg">Supprimer trick</button>' %}
        {% endembed %}
    </div>
</section>

{% endblock %}

{% block js %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="{{ asset('js/delete_media.js') }}"></script>
    <script src="{{ asset('js/delete_video.js') }}"></script>

    <script src="{{ asset('js/add_video_preview.js') }}"></script>
    <script src="{{ asset('js/delete_video_preview.js') }}"></script>
    <script src="{{ asset('js/add_media_preview.js') }}"></script>
    <script src="{{ asset('js/delete_media_preview.js') }}"></script>
{% endblock %}