{% form_theme form 'bootstrap_4_layout.html.twig' %}
{{ form_start(form) }}
{# {{ form_widget(form) }} #}


<div class="trick-details">
    <p>Category: {{ form_row(form.category, {'label': false}) }}</p>
</div>

<hr>
<div class="trick-description">
    <h4 class="card-title">{{ form_row(form.name, {'attr': {'placeholder': 'Titre de trick', 'label' : 'Titre de trick'}}) }}</h4>
    <h4 class="card-text">{{ form_row(form.description|raw, {'attr': {'placeholder': 'Description', 'label' : 'Titre de trick'}}) }}</h4>

</div>
<div class="trick-images" id="list">
    <h4>Ajouter des images</h4>
    {{ form_row(form.medias, {'label': false}) }}
    {% if app.request.attributes.get('_route') == 'trick_edit' %}

        {% for media in trick.media %}
            <div class="file-media">
                <img src="{{ asset('/uploads/'~ media.name) }}" alt="file-media">
                <a href="{{ path('trick_delete_media', {'id': media.id}) }} "
                   class="js-img-delete" id="del_button" data-token="{{ csrf_token('delete'~ media.id)}}">
                    <i class="far fa-times-circle"></i>
                </a>
            </div>
        {% endfor %}
    {% endif %}
</div>

