{% form_theme form 'bootstrap_4_layout.html.twig' %}
{{ form_start(form) }}
{# {{ form_widget(form) }} #}

    <div class="main-image">
        {% if trick.media %}
            {% for media in trick.media %}
                <img class="first-image" src="{{ asset('/uploads/'~ media.name) }}" alt="main trick image">
            {% endfor %}
        {% else %}
            <img class="first-image" src="{{ asset('/images/default_image.jpeg') }}" alt="default trick image">
        {% endif %}

    </div>
    <div class="trick-details">
        <p>Category: {{ form_row(form.category, {'label': false}) }}</p>
    </div>

    <hr>
    <div class="trick-description">
        <h4 class="card-title">{{ form_row(form.name, {'attr': {'placeholder': 'Titre de trick', 'label' : 'Titre de trick'}}) }}</h4>
        <h4 class="card-text">{{ form_row(form.description, {'attr': {'placeholder': 'Description'|raw, 'label' : 'Titre de trick'}}) }}</h4>

    </div>
<div class="trick-images">
    <h4>Ajouter des images</h4>
    {{ form_row(form.medias, {'label': false}) }}
    {% if app.request.attributes.get('_route') == 'trick_edit' %}

        {% for media in trick.media %}
            <div>
                <img src="{{ asset('/uploads/'~ media.name) }}" alt="file-media">
                <a href="{{ path('trick_delete_media', {'id': media.id}) }}">Supprimer</a>
                {# data-delete data-token="{{ csrf_token('delete'~ media.id)}} #}

            </div>
        {% endfor %}
    {% endif %}
</div>

<div class="trick-videos">
    <h4>Ajouter des videos</h4>
    {{ form_row(form.videos, {'label': false}) }}
</div>

<button class="btn btn-warning btn-lg">{{ button_label|default('Cr√©er un trick') }}</button>
{{ form_end(form) }}



